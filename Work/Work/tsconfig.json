{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "types": [
      "node",
      "@wdio/sync",
      "@wdio/mocha-framework",
      "mocha",
      "chai",
      "chai-string"
    ],
    "removeComments": true,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
